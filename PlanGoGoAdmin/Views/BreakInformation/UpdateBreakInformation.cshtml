@{
    Layout = "~/Views/shared/_authenticatedLayout.cshtml";
}
@model PlanGoGoAdmin.Models.BreakInformation.ModelBreakInformation
@using BusinessEntites.Custom
@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <td>
                    <div>
                        <a href="~/BreakInformation/ManageBreakInformation" title="Manage Break Information">
                            View Break Information
                        </a>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="adminPanelBody">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        <tr>
                            <td colspan="2" style="color: red">
                                @Model.ErrorMessage
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Break Type
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.TextBoxFor(m => m.BreakType)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Start Time
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.DropDownListFor(m => m.StartTime, new SelectList(TimeInterval.HoursInterval), Model.StartTime)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Minimum Time
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.DropDownListFor(m => m.MinimumTime, new SelectList(TimeInterval.HoursInterval), Model.MinimumTime)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Display
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.TextBoxFor(m => m.Display)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        End Time
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.DropDownListFor(m => m.EndTime, new SelectList(TimeInterval.HoursInterval), Model.EndTime)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="adminActionControl">
                                    <input type="submit" value="Submit" />
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>


        @Html.HiddenFor(m => m.BreakInformationId)
    </div>
}

