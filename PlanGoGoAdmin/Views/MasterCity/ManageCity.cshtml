@{
    Layout = "~/Views/shared/_authenticatedLayout.cshtml";
}
@Scripts.Render("~/controllerManageCity")
<div ng-controller="controllerManageCity">

    <table cellpadding="0" cellspacing="0" border="0">
        <tr>
            <td>
                Country
            </td>
            <td>
                <select id="ddlCountryId" ng-model="CountrySelectedValue" ng-change="CountryDropDownSelected()"
                        ng-options="_country as _country.CountryName for _country in manageCountry track by _country.CountryId"></select>
            </td>

            <td>
                State
            </td>
            <td>
                <select id="ddlStateId" ng-model="StateSelectedValue" ng-change="StateDropDownSelected()"
                        ng-options="_state as _state.StateName for _state in manageStates track by _state.StateId"></select>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <table class="table" data-ng-table="manageCityTableParams">
                    <tbody>
                        <tr>
                            <th>
                                Actions
                            </th>
                            <th>
                                City Name
                            </th>
                            <th>
                                Short Name
                            </th>
                            <th>
                                Is Default
                            </th>
                        </tr>
                    </tbody>
                    <tr ng-repeat="user in manageCity">
                        <td>
                            <a href="/Attractions/ManageAttractions?CityId={{user.CityId}}" title="Attraction List">
                                Attractions
                            </a>
                            <a href="/MasterCity/UpdateCity?CityId={{user.CityId}}" title="Update City">
                                Edit
                            </a>
                        </td>
                        <td title="'City Name'">
                            {{user.CityName}}
                        </td>
                        <td title="'City Short Name'">
                            {{user.CityShortName}}
                        </td>
                        <td title="'Is Default'">
                            {{user.IsDefault}}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>


</div>
