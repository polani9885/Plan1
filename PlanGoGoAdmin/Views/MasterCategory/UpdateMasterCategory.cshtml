@{
    Layout = "~/Views/shared/_authenticatedLayout.cshtml";
}
@model PlanGoGoAdmin.Models.MasterCategory.ModelMasterCategory
@using BusinessEntites.Custom
@using (Html.BeginForm())
{
    <div >
        <table>
            <tr>
                <td>
                    <div>
                        <a href="~/MasterCategory/ManageMasterCategory" title="Manage Category">
                            View Category
                        </a>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="adminPanelBody">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        <tr>
                            <td colspan="2" style="color: red">
                                @Model.ErrorMessage
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Category Name
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.TextBoxFor(m => m.CategoryName)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        View Time
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.DropDownListFor(m=>m.ViewTime, new SelectList(TimeInterval.HoursInterval),Model.ViewTime)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="adminActionControl">
                                    <input type="submit" value="Submit"/>
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        
        
        @Html.HiddenFor(m => m.CategoryId)
    </div>
}

