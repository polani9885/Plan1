@{
    Layout = "~/Views/shared/_authenticatedLayout.cshtml";
}
@model PlanGoGoAdmin.Models.MasterTravelMode.ModelTravelMode
@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <td>
                    <div>
                        <a href="~/MasterTravelMode/ManageTravelMode" title="Master Travel Types">
                            View Travel Types
                        </a>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="adminPanelBody">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        <tr>
                            <td colspan="2" style="color: red">
                                @Model.ErrorMessage
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Travel Type
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.TextBoxFor(m => m.TravelType)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="adminActionControl">
                                    <input type="submit" value="Submit" />
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>


        @Html.HiddenFor(m => m.TravelModeId)
    </div>
}

