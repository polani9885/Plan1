@{
    Layout = "~/Views/shared/_authenticatedLayout.cshtml";
}
@model PlanGoGoAdmin.Models.Country.ModelCountry
@using (Html.BeginForm())
{
    <div class="adminPanelBody">
        <table cellpadding="0" cellspacing="0" border="0" width="100%">
            <tr>
                <td colspan="2" style="color:red">
                    @Model.ErrorMessage
                </td>
            </tr>
            <tr>
                <td>
                    <div class="adminField">
                        <span class="adminFieldText">
                            Country Name
                        </span>
                    </div>
                </td>
                <td>
                    <div class="adminInputControl">
                        @Html.TextBoxFor(m => m.CountryName)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="adminField">
                        <span class="adminFieldText">
                            Country Short Name
                        </span>
                    </div>
                </td>
                <td>
                    <div class="adminInputControl">
                        @Html.TextBoxFor(m => m.CountryShortName)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="adminField">
                        <span class="adminFieldText">
                            Is Default
                        </span>
                    </div>
                </td>
                <td>
                    @Html.CheckBoxFor(m => m.IsDefault)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="adminActionControl">
                        <input type="submit" value="Submit" />
                    </div>
                </td>
            </tr>
        </table>
        @Html.HiddenFor(m => m.CountryId)
    </div>
}

