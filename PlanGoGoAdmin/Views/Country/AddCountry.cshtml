@{
    Layout = "~/Views/shared/_authenticatedLayout.cshtml";
}
@model PlanGoGoAdmin.Models.Country.ModelCountry  
@using (Html.BeginForm())
{
    <div>
        <table cellpadding="0" cellspacing="0" border="1">
            <tr>
                <td colspan="2" style="color:red">
                    @Model.ErrorMessage
                </td>
            </tr>
            <tr>
                <td>Country Name</td>
                <td>
                    @Html.TextBoxFor(m => m.CountryName)
                </td>
            </tr>
            <tr>
                <td>Country Short Name</td>
                <td>
                    @Html.TextBoxFor(m => m.CountryShortName)
                </td>
            </tr>
            <tr>
                <td>Is Default</td>
                <td>
                    @Html.CheckBoxFor(m => m.IsDefault)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>
        @Html.HiddenFor(m => m.CountryId)
    </div>
}


