@{
    Layout = "~/Views/shared/_authenticatedLayout.cshtml";
}
@Scripts.Render("~/controllerManageStates")


<div ng-controller="controllerManageState">

    <table cellpadding="0" cellspacing="0" border="0">
        <tr>
            <td>
                Country
            </td>
            <td>
                <select id="ddlCountryId" ng-model="CountrySelectedValue" ng-change="CountryDropDownSelected()"
                        ng-options="_country as _country.CountryName for _country in manageCountry track by _country.CountryId"></select>   
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>
                                Actions
                            </th>
                            <th>
                                State Name
                            </th>
                            <th>
                                Shoare Name
                            </th>
                            <th>
                                Is Default
                            </th>
                        </tr>
                    </tbody>
                    <tr ng-repeat="user in manageStates">
                        <td>
                            <a href="/MasterCity/ManageCity?StateId={{user.StateId}}" title="City List">
                                City List
                            </a>
                            <a href="/MasterState/UpdateState?StateId={{user.StateId}}" title="Update State">
                                Edit
                            </a>
                        </td>
                        <td title="'State Name'">
                            {{user.StateName}}
                        </td>
                        <td title="'State Short Name'">
                            {{user.StateShortName}}
                        </td>
                        <td title="'Is Default'">
                            {{user.IsDefault}}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    
</div>
