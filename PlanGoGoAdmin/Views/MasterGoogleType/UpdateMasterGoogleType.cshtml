@{
    Layout = "~/Views/shared/_authenticatedLayout.cshtml";
}
@model PlanGoGoAdmin.Models.ManageMasterGoogleType.ModelManageMasterGoogleType
@using BusinessEntites.Custom
@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <td>
                    <div>
                        <a href="~/MasterGoogleType/ManageMasterGoogleType" title="Manage Google Attractions">
                            Manage Google Attractions
                        </a>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="adminPanelBody">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        <tr>
                            <td colspan="2" style="color: red">
                                @Model.ErrorMessage
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Name
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.TextBoxFor(m => m.TypeName)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Is Needed
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.CheckBoxFor(m=>m.IsNeeded)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Display For User
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.CheckBoxFor(m => m.DisplayForUser)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        View Time
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.DropDownListFor(m => m.ViewTime, new SelectList(TimeInterval.HoursInterval), Model.ViewTime)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="adminField">
                                    <span class="adminFieldText">
                                        Extra Search
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="adminInputControl">
                                    @Html.CheckBoxFor(m => m.ExtraSearch)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="adminActionControl">
                                    <input type="submit" value="Submit" />
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>


        @Html.HiddenFor(m => m.GoogleTypeID)
    </div>
}

